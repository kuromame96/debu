panel = new Panel{ 
    align="left top", alpha=60, fillStyle=$fontColor,
    x=0, y=0
};
panel.fillRect( 0, 0, $screenWidth, $screenHeight * 0.15 );

label = new Label{
    template="残弾: $tabeta\n倒した数: $breakAlien",
    x=$screenWidth * 0.5, y=$screenHeight * 0.05,
    size=100, fillStyle="white",
};

on( "die" ) \{
    panel.die();
    label.die();
};

update();